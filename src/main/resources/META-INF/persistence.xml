             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="student-unit" transaction-type="RESOURCE_LOCAL">
        <class>com.itea.entity.Group</class>
        <class>com.itea.entity.Student</class>
        <class>com.itea.entity.Mark</class>
        <class>com.itea.entity.Teacher</class>
        <class>com.itea.entity.Lesson</class>
    </persistence-unit>

</persistence>